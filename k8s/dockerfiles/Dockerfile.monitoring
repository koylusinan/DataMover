# Dockerfile for monitoring service
# Proactive Monitoring - SINGLE INSTANCE ONLY (stateful)
FROM node:20-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy backend code
COPY backend/monitoring-service.js ./backend/
COPY backend/start-monitoring.js ./backend/

# Environment variables
ENV NODE_ENV=production

# Start monitoring service
CMD ["node", "backend/start-monitoring.js"]
